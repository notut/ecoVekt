{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "allowJs": true,          // ✅ allow JS imports
    "checkJs": false,         // optional: don’t type-check JS
    "esModuleInterop": true,  // allows default imports from JS
    "paths": {
      "@/*": [
        "./*"
      ]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts",
    "firebaseConfig.js",
    "firebaseEnv.js"
  ]
}